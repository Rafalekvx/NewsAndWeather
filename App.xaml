<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NewsAndWeather"
             x:Class="NewsAndWeather.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <x:String x:Key="SfComboBoxTheme">CustomTheme</x:String>
                  
                    <Color x:Key="SfComboBoxNormalDropdownItemsTextColor">White</Color>
                    <Color x:Key="SfComboBoxDropdownBackground">#323232</Color>
                    <Color x:Key="SfComboBoxNormalDropdownSelectionBackground">#0E8B6D</Color>
                </ResourceDictionary>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
