<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsAndWeather.Views.NewsPage"
             xmlns:viewmodels="clr-namespace:NewsAndWeather.ViewModels"
             xmlns:models="clr-namespace:NewsAndWeather.Models"
             x:DataType="viewmodels:NewsPageViewModel">
    <ScrollView>
        <CollectionView x:Name="PostsListView"
                            ItemsSource="{Binding Posts}"
                            SelectionMode="None"
                            >
            <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                        <Grid x:DataType="models:Post" RowDefinitions="*,*,auto,auto" ColumnDefinitions="*,*,*,*" RowSpacing="20">
                        <Label FontAttributes="Bold" TextTransform="Uppercase" Text="{Binding Title}" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="Center" VerticalOptions="Center"></Label>
                        <Label Text="{Binding Description}" Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="Center" VerticalOptions="Center"></Label>
                        <Image Aspect="AspectFit" Source="{Binding ImageLink}" Grid.Row="0" Grid.RowSpan="4" Grid.Column="2" Grid.ColumnSpan="2" HorizontalOptions="Center" VerticalOptions="Center"></Image>
                        </Grid>
                            <BoxView Color="Aqua" HorizontalOptions="Fill" HeightRequest="30"> </BoxView>
                            </VerticalStackLayout>
                    </DataTemplate>

                </CollectionView.ItemTemplate>

            </CollectionView>
    </ScrollView>
</ContentPage>