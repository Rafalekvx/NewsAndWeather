<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsAndWeather.Views.NewsPage"
             xmlns:viewmodels="clr-namespace:NewsAndWeather.ViewModels"
             xmlns:models="clr-namespace:NewsAndWeather.Models"
             x:DataType="viewmodels:NewsPageViewModel">
    
    <ScrollView>
        <CollectionView x:Name="PostsListView"
                            ItemsSource="{Binding Posts}"
                            SelectionMode="None"
                            >
            <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="15,15,15,15" Margin="10,10,10,10">
                        <Grid x:DataType="models:Post" 
                              RowDefinitions="*,*,auto,auto" 
                              ColumnDefinitions="*,*,*,*" 
                              RowSpacing="20">
                        <Label FontAttributes="Bold" TextTransform="Uppercase" 
                               Text="{Binding Title}" 
                               Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="2" 
                               HorizontalOptions="Center" VerticalOptions="Center"></Label>
                        <Label Text="{Binding Description}"  LineBreakMode="WordWrap" MaxLines="3"
                               Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="2" 
                               HorizontalOptions="Center" VerticalOptions="Center"></Label>
                            
                        <Image Aspect="AspectFit" Source="{Binding ImageLink}" 
                               Grid.Row="0" Grid.RowSpan="4" Grid.Column="2" Grid.ColumnSpan="2" 
                               HorizontalOptions="Center" VerticalOptions="Center" Margin="5,5,5,5"></Image>
                            
                           <Grid.GestureRecognizers> 
                        <TapGestureRecognizer NumberOfTapsRequired="1"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:NewsPageViewModel}}, Path=ItemTapped}"
                                CommandParameter="{Binding .}"/>
                           </Grid.GestureRecognizers>
                        </Grid>
                            </VerticalStackLayout>
                    </DataTemplate>

                </CollectionView.ItemTemplate>

            </CollectionView>
    </ScrollView>
</ContentPage>