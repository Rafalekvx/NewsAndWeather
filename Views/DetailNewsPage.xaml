<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsAndWeather.Views.DetailNewsPage"
             xmlns:viewmodels="using:NewsAndWeather.ViewModels"
             xmlns:models="using:NewsAndWeather.Models"
             x:DataType="viewmodels:DetailNewsPageViewModel">
       
       
       <VerticalStackLayout x:DataType="models:Post">
        <Label FontAttributes="Bold" TextTransform="Uppercase" 
               Text="{Binding Title}" 
               HorizontalOptions="Center" VerticalOptions="Center"></Label>
        <Image Aspect="AspectFit" Source="{Binding ImageLink}" 
               HorizontalOptions="Center" VerticalOptions="Center" Margin="5,5,5,5"></Image>
        <Label Text="{Binding Description}"  LineBreakMode="WordWrap"
               HorizontalOptions="Center" VerticalOptions="Center"></Label>
    </VerticalStackLayout>
       
       
</ContentPage>