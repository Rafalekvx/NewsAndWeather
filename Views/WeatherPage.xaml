<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsAndWeather.Views.WeatherPage"
             xmlns:viewmodels="clr-namespace:NewsAndWeather.ViewModels"
             x:DataType="viewmodels:WeatherPageViewModel"
             xmlns:models="clr-namespace:NewsAndWeather.Models"
             >
    <ScrollView>
        <CollectionView x:Name="ForecastsListView"
                        ItemsSource="{Binding Forecasts}"
                        SelectionMode="None"
        >
            <CollectionView.Header>
                <HorizontalStackLayout>
                    <Label FontAttributes="Bold" TextTransform="Uppercase" Text="Data"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                    <Label Text="Minimum temperature"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                    <Label Text="Maximum temperature"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                    <Label Text="WeatherIco"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                </HorizontalStackLayout>
            </CollectionView.Header>
            
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout x:DataType="models:DailyForecast" >
                            <Label Text="{Binding Date}"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                            <Label Text="{Binding Temperature.Minimum.Value}"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                            <Label Text="{Binding Temperature.Maximum.Value}"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                            <Label Text="{Binding Day.IconPhrase}"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                    </HorizontalStackLayout>
                </DataTemplate>

            </CollectionView.ItemTemplate>

        </CollectionView>
        
    </ScrollView>
</ContentPage>