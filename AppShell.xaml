<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NewsAndWeather.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NewsAndWeather"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    xmlns:views="clr-namespace:NewsAndWeather.Views"
    >

    <TabBar>
        <Tab Title="News">
            <ShellContent ContentTemplate="{DataTemplate views:NewsPage}" />
        </Tab>
        <Tab Title="Weather">
            <ShellContent ContentTemplate="{DataTemplate views:WeatherPage}" />
        </Tab>
    </TabBar>

</Shell>
